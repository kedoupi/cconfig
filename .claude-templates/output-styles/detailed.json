{
  "name": "detailed",
  "displayName": "详细模式",
  "description": "详细的输出风格，包含完整解释和示例",
  "version": "1.0.0",
  "style": {
    "verbosity": "verbose",
    "codeComments": true,
    "explanations": true,
    "examples": true,
    "stepByStep": true
  },
  "formatting": {
    "useEmojis": true,
    "useBold": true,
    "useColors": true,
    "maxLineLength": 120,
    "indentSize": 2
  },
  "responses": {
    "confirmationRequired": true,
    "showProgress": true,
    "includeContext": true,
    "suggestNextSteps": true
  },
  "codeGeneration": {
    "includeComments": true,
    "includeTypeHints": true,
    "includeErrorHandling": true,
    "includeLogging": true,
    "optimizeForReadability": true
  },
  "prompts": {
    "systemPrompt": "请提供详细的解释和分步骤指导，包含相关背景知识和最佳实践。",
    "codePrompt": "提供完整的代码示例，包含详细注释和错误处理。",
    "explanationPrompt": "详细解释每个步骤的原理和目的。"
  },
  "templates": {
    "codeBlock": "```{language}\n// {description}\n{code}\n```\n\n**说明**: {explanation}",
    "errorMessage": "❌ **错误**: {message}\n\n**解决方案**: {solution}",
    "successMessage": "✅ **完成**: {message}\n\n**下一步**: {nextSteps}",
    "warningMessage": "⚠️ **注意**: {message}\n\n**建议**: {recommendation}"
  },
  "sections": {
    "includeOverview": true,
    "includePrerequisites": true,
    "includeStepByStep": true,
    "includeExamples": true,
    "includeTroubleshooting": true,
    "includeReferences": true
  },
  "filters": {
    "removeMarkdownHeaders": false,
    "removeCodeComments": false,
    "removeEmptyLines": false,
    "removeVerboseExplanations": false
  }
}
{
  "autoSave": false,
  "autoSubmit": false,
  "maxTokens": 8192,
  "temperature": 0.0,
  "modelOverride": null,
  "providers": [],
  "defaultProvider": "",
  "outputStyle": "concise",
  "theme": "system",
  "language": "en",
  "statusLineFormat": "{{providerAlias}} ({{model}}) - {{tokens}} tokens",
  "notifications": {
    "enabled": true,
    "sound": false,
    "desktop": true
  },
  "security": {
    "encryptApiKeys": true,
    "autoLock": false,
    "lockTimeout": 1800,
    "requireAuth": false
  },
  "backup": {
    "enabled": true,
    "interval": 24,
    "keepDays": 30,
    "location": "~/.claude-config-backup"
  },
  "logging": {
    "level": "info",
    "destination": "file",
    "maxFileSize": "10MB",
    "rotateFiles": true
  },
  "ui": {
    "compactMode": false,
    "showProviderInfo": true,
    "showTokenCount": true,
    "confirmActions": true
  },
  "performance": {
    "cacheResponses": true,
    "cacheTtl": 3600,
    "requestTimeout": 30000,
    "retryAttempts": 3
  },
  "experimental": {
    "features": [],
    "betaMode": false
  },
  "aliases": {
    "updateInterval": 30,
    "shellIntegration": true,
    "autoComplete": true
  },
  "version": "1.0.0",
  "lastUpdated": null,
  "configVersion": "1.0"
}
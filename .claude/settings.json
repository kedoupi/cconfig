{
  "name": "Claude Code Kit Configuration",
  "description": "Optimized configuration for Claude Code development",
  "version": "1.0.0",
  "features": {
    "autoSave": true,
    "verboseLogging": true,
    "autoBackup": true,
    "lowTemperature": true
  },
  "apiSettings": {
    "timeout": 3000000,
    "retryAttempts": 3,
    "retryDelay": 1000
  },
  "ui": {
    "theme": "auto",
    "showLineNumbers": true,
    "wordWrap": true,
    "fontSize": 14
  },
  "development": {
    "enableDebugMode": false,
    "showPerformanceMetrics": false,
    "enableExperimentalFeatures": false
  },
  "security": {
    "validateApiKeys": true,
    "encryptSensitiveData": true,
    "logLevel": "info"
  }
}